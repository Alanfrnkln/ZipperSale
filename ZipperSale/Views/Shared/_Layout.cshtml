<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zippersale</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/zippersale.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="index">zippersale</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" asp-controller="Home" asp-action="index">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="index">Principal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Gallery" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Company" asp-action="index">Empresa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Contact" asp-action="index">Contato</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Register" asp-action="index">Acesso</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Register" asp-action="index">Cadastro</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="border-bottom box-shadow mb-3">
            <div class="container">
                <div class="row mb-2">
                    <div class="col-lg-1 submenutop">Categorias:</div>
                    <div class="col-lg-1 submenutop"><a class="submenutop" href="#">Masculina</a></div>
                    <div class="col-lg-1 submenutop"><a href="#">Feminina</a></div>
                    <div class="col-lg-1 submenutop"><a href="#">Infantil</a></div>
                    <div class="col-lg-1 submenutop"><a href="#">Acessorios</a></div>
                    <div class="col-lg-1 submenutop"><a href="#">Perfumes</a></div>
                    <div class="col-lg-1 submenutop"><a href="#">Cal√ßados</a></div>
                    <div class="col-lg-1 submenutop"><a href="#">Vitrini</a></div>
                    <div class="col-lg-1 submenutop"><a href="#">Cart. s/juros</a></div>
                    
                    <div class="col-lg-3">
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Pesquise algum item" aria-label="Busque algum item">
                            <button class="btn btn-outline-success" type="submit">Buscar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black footerHgt">
        <div class="container">
            &copy; 2023 - zippersale - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>